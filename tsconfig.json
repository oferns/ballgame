{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "allowJs": true,
        "alwaysStrict": true,
        "baseUrl": ".",
    },
    "compileOnSave": false,
    "include": [
      "**/*.ts"
    ]
}